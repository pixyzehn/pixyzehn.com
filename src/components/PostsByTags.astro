---
import { slugifyTag } from '../utils/tags';

const { tagMap } = Astro.props;
const tags = Object.keys(tagMap);
---
<section class="space-y-6">
  {tags.map((tag) => (
    <div>
      <h4 id={slugifyTag(tag)}>#{tag}</h4>
      <ul class="m-0 list-none p-0">
        {tagMap[tag].map((post) => (
          <li><a href={post.url}>{post.title}</a></li>
        ))}
      </ul>
    </div>
  ))}
</section>
